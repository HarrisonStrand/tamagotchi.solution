@using Game.Models;

<h1>Tamagotchi List:</h1>

@if (Model.Count == 0)
{
  <p>You don't have any Tamagotchi...</p>
}
<ul>
  @foreach (Tamagotchi tamagotchi in Model)
  {
    <li><a href='/tamagotchi/@tamagotchi.Id'>@tamagotchi.Name</a></li>
    <li>@tamagotchi.Hunger</li>
    <li>@tamagotchi.Happiness</li>
    <li>@tamagotchi.Fatigue</li>
    <li>@tamagotchi.HungerStatus</li>
    <li>@tamagotchi.HappinessStatus</li>
    <li>@tamagotchi.FatigueStatus</li>
  }

</ul>
<a href="/tamagotchi/new">Create a new Tamagotchi!</a>

<form action="/tamagotchi/delete" method="post">
  <button type="submit" name="button">Kill all of your Tamagotchi >:(</button>
</form>